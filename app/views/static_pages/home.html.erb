	<section id="contact">
		<div class="container">
			<div class="row">
				<div class="col-lg-12 text-center">
					<h2 class="section-heading">Contact Me</h2>
					<h3 class="section-subheading text-muted">Feel free to contact me about anything you'd like.  I love meeting new people.</h3>
					 <ul class="list-inline social-buttons">
	          <li>
	            <%= link_to "https://www.facebook.com/colton.malone.14", :target => "_blank" do %>
	              <i class="fa fa-facebook"></i>
	            <% end %>
	          </li>
	          <li>
	            <%= link_to "https://www.linkedin.com/pub/colton-malone/24/488/96", :target => "_blank" do %>
	              <i class="fa fa-linkedin"></i>
	            <% end %>
	          </li>
	          <li>
	            <%= link_to "https://twitter.com/coltonmalone", :target => "_blank" do %>
	              <i class="fa fa-twitter"></i>
	            <% end %>
	          </li>
	        </ul>
				</div>
			</div>
			<div class="row">
				<div class="col-lg-12">
				<%= form_tag("/contact", method: "post", id: "contactForm", remote: true) do %>
					<div class="row">
						<div class="col-md-6">
							<div class="form-group">
								<%= text_field_tag :name, nil, :class => "form-control", :placeholder => "Your Name *" %>
								<p class="help-block text-danger"></p>
							</div>
							<div class="form-group">
								<%= email_field_tag :email, nil, :class => "form-control", :placeholder => "Your Email *" %>
								<p class="help-block text-danger"></p>
							</div>
							<div class="form-group">
								<%= text_field_tag :phone, nil, :class => "form-control", :placeholder => "Your Phone" %>
								<p class="help-block text-danger"></p>
							</div>
						</div>
						<div class="col-md-6">
							<div class="form-group">
								<%= text_area_tag :message, nil, :class => "form-control", :placeholder => "Your Message *" %>
								<p class="help-block text-danger"></p>
							</div>
						</div>
						<div class="clearfix"></div>
							<div class="col-lg-12 text-center">
								<div id="success" class="">Thanks for reaching out!  I will get back to you soon.</div>
								<%= submit_tag("Send Message", :class => "btn btn-xl") %>
							</div>
						</div>
					</div>
				<% end %>
				</div>
			</div>
		</div>
	</section>